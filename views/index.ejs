<%- layout('layout/boilerplate') %>
    <h1>View All Camping Places In India</h1>
    <div>
        <a href="/camping/new">Add Campground</a>
    </div>
    <% for(let data of campData){ %>
        <div class="card" mb-3>
            <div class="row">
                <div class="col-md-4">
                    <img class="img-fluid" alt="image" src="<%= `${data.image}&w=600&h=600` %>">
                </div>
                <div class="col-md-8">
                    <div class="card-body">
                        <h5 class="card-title">
                            <%= data.title %>
                        </h5>
                        <p class="card-text">
                            <%= data.description %>
                        </p>
                        <p class="card-text">
                            <small class="text-muted">
                                <%= data.location%>
                            </small>
                        </p>
                        <a class="btn btn-primary" href="/camping/<%=data._id%>">View <%=data.title%></a>
                    </div>
                </div>
            </div>
        </div>
        <% } %>